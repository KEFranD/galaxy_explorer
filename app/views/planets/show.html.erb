<!DOCTYPE html>
<html>
<head>
  <title>Galaxy Explorer Show</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <style>
    .right-align {
      text-align: right;
    }
    .btn-primary {
    background-color: #C4C3C4;
    border-color: #C4C3C4;
    }

    .btn-primary:hover{
    background-image: linear-gradient(90deg, #00C0FF 0%, #FFCF00 49%, #FC4F4F 80%, #00C0FF 100%);
    animation:slidebg 5s linear infinite;
    }

    @keyframes slidebg {
    to {
    background-position:20vw;
    }
  }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-white border">
    <div class="container">

      <a href="/"><img src="https://res.cloudinary.com/dujnrrugq/image/upload/v1685691583/fotor_2023-6-2_11_39_28_ajokjb.png" alt="Logo" width=120px></a>

      <%= form_with url: planets_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>

      <div class="dropdown">
      <button class="btn dropdown-toggle" type="button" id="loginDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <img src="https://res.cloudinary.com/dujnrrugq/image/upload/v1685448517/astronaut-helmet-vintage-logo-concept-black-and-white-color-hand-drawn-illustration-vector_ctk0ow.jpg" alt="Image" id="dropdownImage" class="dropdown-img">
      </button>
        <div class="dropdown-menu" aria-labelledby="dropdownImage">
          <% if user_signed_in?%>
            <%= link_to "edit", edit_user_registration_path, class: "dropdown-item", data: {turbo_method: :delete}%>
            <%= link_to "logout", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete}%>
          <%else%>
            <%= link_to "Login", new_user_session_path,  class: "dropdown-item"%>
            <a href = "users/sign_up" class = "dropdown-item">Sign Up</a>
          <%end%>
        </div>
  </nav>

 <div class="card mb-3" style="max-width: 940px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="https://res.cloudinary.com/dujnrrugq/image/upload/v1685452480/FullMoon2010.jpg_qilcar.webp" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title text-align-center font-size 50px"><%= @planet.name %></h5>
        <p class="card-text"><%= @planet.description %></p>
        <p class="card-text"><%= @planet.price %></p>
        <%# <p class="card-text"><%= @planet.rating<img src="https://res.cloudinary.com/dblraorbo/image/upload/v1685618883/Galaxy-Explorer/1289679474_f2l0u8.svg" alt="StarImage" class="img-fluid" width=20px height=20px></p> %>
        <p class="card-text"><small class="text-muted"></small></p>
        <p class="card-text"><%= link_to "Back to planets", planets_path %></p>
        <p class="card-text"><%= link_to "Edit the planet", edit_planet_path %>
        <p class="card-text">
          <%= link_to "Delete",
          planet_path(@planet),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
        </p>
        <p class="card-text">
          <%= link_to "Book it", new_planet_booking_path(@planet) %>
        </p>
      </div>
    </div>
  </div>
</div>



</body>
</html>
