        <p class="card-text">
          <%= link_to "Delete",
          planet_path(@planet),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
        </p>
        <p class="card-text">
          <%= link_to "Book it", new_planet_booking_path(@planet) %>
