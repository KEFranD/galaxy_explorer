<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
  <title>Galaxy Explorer Home</title>

  <style>
    .dropdown-img {
      display: inline-block;
      cursor: pointer;
      height: 50px;
      width: 50px;
    }
    .dropdown-img:hover {
      opacity: 0.8;
    }

    .search-bar {
      position: relative;
      max-width: 400px;
      margin: 0 auto;
    }
    .search-bar input[type="text"] {
      width: 100%;
      padding: 12px 50px 12px 16px;
      border: none;
      border-radius: 30px;
      font-size: 16px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .search-bar .search-icon {
      position: absolute;
      top: 50%;
      right: 16px;
      transform: translateY(-50%);
      color: #999;
      cursor: pointer;
    }
    .search-bar .search-icon:hover {
      color: #333;
    }

    .image-link {
      display: inline-block;
      cursor: pointer;
    }
    .image-link:hover img {
      opacity: 0.8;
    }
  </style>

</head>
<body>
  <div class="star_background">
      <div class="stars"></div>
      <div class="twinkling"></div>
      <div class="clouds"></div>
      <div class="title"></div>
    </div>
  <nav class="navbar navbar-expand-lg navbar-light bg-white border">
    <div class="container">

      <a class="navbar-brand"><img src="https://res.cloudinary.com/dujnrrugq/image/upload/v1685450979/Screenshot_2023-05-30_at_15.28.59-PhotoRoom.png-PhotoRoom_a1bmdi.png" alt="Logo" width=180px height=60px></a>

      <form class="search-bar">
        <input type="text" placeholder="Search..." id="search">
        <i class="fas fa-search search-icon"></i>
      </form>

      <div class="dropdown">
      <button class="btn dropdown-toggle" type="button" id="loginDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <img src="https://res.cloudinary.com/dujnrrugq/image/upload/v1685448517/astronaut-helmet-vintage-logo-concept-black-and-white-color-hand-drawn-illustration-vector_ctk0ow.jpg" alt="Image" id="dropdownImage" class="dropdown-img">
      </button>
        <div class="dropdown-menu" aria-labelledby="dropdownImage">
          <a class="dropdown-item" href="#">Login</a>
          <a class="dropdown-item" href="#">Sign Up</a>
        </div>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card">
            <a href="https://www.youtube.com" class="image-link">
              <img src="https://res.cloudinary.com/dujnrrugq/image/upload/v1685452480/FullMoon2010.jpg_qilcar.webp" alt="MoonImage" class="img-fluid">
            </a>
            <div class="card-body">
              <h5 class="card-title">Moon</h5>
              <p class="card-text">Description of Moon</p>
            </div>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
